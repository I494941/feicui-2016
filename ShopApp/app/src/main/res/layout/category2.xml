<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_category_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_category_2_1"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_below="@+id/tv_category_2"/>

        <ImageView
            android:id="@+id/iv_category_2_2"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_below="@+id/tv_category_2"
            android:layout_toRightOf="@+id/iv_category_2_1"/>

        <ImageView
            android:id="@+id/iv_category_2_3"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_below="@+id/tv_category_2"
            android:layout_toRightOf="@+id/iv_category_2_2"/>

        <ImageView
            android:id="@+id/iv_category_2_4"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_below="@+id/tv_category_2"
            android:layout_toRightOf="@+id/iv_category_2_3"/>
    </RelativeLayout>

</LinearLayout>