<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_slidingmenu_left"
    android:gravity="center">

    <!--登陆样式设置 -->

    <RelativeLayout
        android:id="@+id/relativelayout_unlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/biz_pc_main_info_profile_avatar_bg_dark" />

        <TextView
            android:id="@+id/text_view_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_view_login"
            android:layout_centerHorizontal="true"
            android:text="立刻登陆"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>
    <!--分享布局设置 -->
    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rl_update_version"
        android:background="@drawable/share_little_bg"
        android:gravity="center">

        <ImageView
            android:id="@+id/fun_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fun_share_weixin"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/fun_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/addimport_qq"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/fun_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fun_share_friends"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/fun_weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fun_share_weibo"
            android:layout_weight="1"/>
    </LinearLayout>

    <!--版本升级文字设置 -->
    <RelativeLayout
        android:id="@+id/rl_update_version"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/relativelayout_unlogin">

        <TextView
            android:id="@+id/update_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="更新版本"
            android:textColor="#ffffff" />
    </RelativeLayout>

</RelativeLayout>
