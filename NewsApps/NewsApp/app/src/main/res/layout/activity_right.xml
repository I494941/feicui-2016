<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_slidingmenu_left"
    android:gravity="center">

    <!--登陆样式设置 -->

    <RelativeLayout
        android:id="@+id/relativelayout_unlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/biz_pc_main_info_profile_avatar_bg_dark" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView1"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="20sp"
            android:text="立刻登陆"
            android:textColor="#ffffff" />
    </RelativeLayout>
    <!--分享布局设置 -->
    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/update_version"
        android:background="@drawable/share_little_bg"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/fun_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fun_share_weixin" />

        <ImageView
            android:id="@+id/fun_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/addimport_qq" />

        <ImageView
            android:id="@+id/fun_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fun_share_friends" />

        <ImageView
            android:id="@+id/fun_weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fun_share_weibo" />
    </LinearLayout>

    <!--版本升级文字设置 -->

    <TextView
        android:id="@+id/update_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativelayout_unlogin"
        android:textColor="#ffffff"
        android:gravity="center"
        android:paddingTop="100dp"
        android:paddingBottom="30dp"
        android:text="更新版本" />
</RelativeLayout>
