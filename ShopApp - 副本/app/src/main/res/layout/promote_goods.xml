<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_promote_goods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="促销单品" />

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/iv_promote_goods_1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/tv_promote_goods"
        android:src="@mipmap/ic_launcher"
        app:civ_border_color="#ff000000"
        app:civ_border_width="0dp" />

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/iv_promote_goods_2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/tv_promote_goods"
        android:layout_toRightOf="@id/iv_promote_goods_1"
        android:src="@mipmap/ic_launcher"

        app:civ_border_color="#00000000"
        app:civ_border_width="0dp" />

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/iv_promote_goods_3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/tv_promote_goods"
        android:layout_toRightOf="@id/iv_promote_goods_2"
        android:src="@mipmap/ic_launcher"
        android:layout_centerHorizontal="true"
        app:civ_border_color="#00000000"
        app:civ_border_width="0dp" />

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/iv_promote_goods_4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/tv_promote_goods"
        android:layout_toRightOf="@id/iv_promote_goods_3"
        android:src="@mipmap/ic_launcher"
        app:civ_border_color="#00000000"
        app:civ_border_width="0dp" />

</RelativeLayout>
