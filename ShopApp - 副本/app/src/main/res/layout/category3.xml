<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <TextView
            android:id="@+id/tv_category_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_category_3_1"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_below="@+id/tv_category_3"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher"/>

        <ImageView
            android:id="@+id/iv_category_3_2"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_below="@+id/tv_category_3"
            android:layout_toRightOf="@id/iv_category_3_1"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/iv_category_3_3"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_below="@+id/iv_category_3_2"
            android:layout_toRightOf="@id/iv_category_3_1"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/iv_category_3_4"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_below="@+id/tv_category_3"
            android:layout_toRightOf="@id/iv_category_3_2"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher"/>

        <ImageView
            android:id="@+id/iv_category_3_5"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_below="@+id/iv_category_3_4"
            android:layout_toRightOf="@id/iv_category_3_3"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher" />

    </RelativeLayout>
</LinearLayout>