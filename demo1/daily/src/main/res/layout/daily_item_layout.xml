<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="wjf 2016-10-10 日报"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tv_should_finished_work"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:padding="5dp"
        android:text="应完成工作"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_should_finished_work"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_should_finished_work"
        android:padding="5dp"
        android:text="应完成工作如下："
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_have_finished_work"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_should_finished_work"
        android:padding="5dp"
        android:text="已完成工作"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_have_finished_work"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_have_finished_work"
        android:padding="5dp"
        android:text="已完成工作如下："
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_unfinished_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_have_finished_work"
        android:padding="5dp"
        android:text="未完成工作原因"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_unfinished_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_unfinished_reason"
        android:padding="5dp"
        android:text="未完成工作原因如下："
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_question_and_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_unfinished_reason"
        android:padding="5dp"
        android:text="问题及解决方法"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_question_and_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_question_and_answer"
        android:padding="5dp"
        android:text="问题及解决方法如下："
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_next_day_plan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_question_and_answer"
        android:padding="5dp"
        android:text="明日任务"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_next_day_plan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_next_day_plan"
        android:padding="5dp"
        android:text="明日任务如下："
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回" />

    </LinearLayout>


</RelativeLayout>