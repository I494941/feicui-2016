<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:layout_width="100dp"
            android:layout_height="40dp"
            android:gravity="right"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:text="姓名："
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:gravity="right"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="#00ff00"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:layout_width="100dp"
            android:layout_height="40dp"
            android:gravity="right"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:text="性别："
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:gravity="right"/>

        <RadioButton
            android:text="女"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <RadioButton
            android:text="男"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:layout_width="100dp"
            android:layout_height="40dp"
            android:gravity="right"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:text="出生日期："
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:gravity="right"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="#00ff00"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:layout_width="100dp"
            android:layout_height="40dp"
            android:gravity="right"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:text="密码："
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:gravity="right"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="#00ff00"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:layout_width="100dp"
            android:layout_height="40dp"
            android:gravity="right"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:text="确认密码："
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:gravity="right"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="#00ff00"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:layout_width="100dp"
            android:layout_height="40dp"
            android:gravity="right"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            android:layout_height="40dp"/>
        <Button
            android:text="保存"
            android:layout_width="100dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_width="50dp"
            android:layout_height="40dp"/>
        <Button
            android:text="取消"
            android:id="@+id/btn_register"
            android:layout_width="100dp"
            android:layout_height="40dp" />
    </LinearLayout>


</LinearLayout>