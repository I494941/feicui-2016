<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android06.feicuiedu.daily_rel.MainActivity">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:background="#cc0000"
        android:gravity="center"
        android:text="日报记录系统"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_below="@+id/tv1" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv2"
        android:gravity="right"
        android:text="用户名：" />

    <EditText
        android:id="@+id/et1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv2"
        android:layout_toRightOf="@+id/tv3"
        android:background="#00ff00" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/tv3" />

    <TextView
        android:id="@+id/tv5"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv4"
        android:gravity="right"
        android:text="密码：" />

    <EditText
        android:id="@+id/et2"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv4"
        android:layout_toRightOf="@+id/tv5"
        android:background="#00ff00" />

    <TextView
        android:id="@+id/tv6"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/tv5" />

    <TextView
        android:id="@+id/tv7"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv6" />

    <CheckBox
        android:id="@+id/cb1"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv6"
        android:layout_toRightOf="@+id/tv7"
        android:text="记住密码" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv6"
        android:layout_toRightOf="@+id/cb1"
        android:background="#ffffff"
        android:text="忘记密码" />

    <TextView
        android:id="@+id/tv8"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tv7" />

    <TextView
        android:id="@+id/tv9"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv8" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv8"
        android:text="登录"
        android:layout_toRightOf="@+id/tv9"
        />

    <TextView
        android:id="@+id/tv10"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv8"
        android:layout_toRightOf="@+id/btn2"/>

    <Button
        android:id="@+id/btn3"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv8"
        android:text="注册"
        android:layout_toRightOf="@+id/tv10"
        />


</RelativeLayout>
