<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 通讯录大全View -->
    <style name="tel_showtext">
        <item name="android:background">#FF009ACD</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/tel_title</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/tel_show_textsize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 主页面 TextView的Style -->
    <style name="homeitem">

        <item name="android:contentDescription">主页面 TextView的Style</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/home_entry_item</item>
        <item name="android:padding">20dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/home_item_textsize</item>
        <item name="android:textStyle">normal</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">hitHomeitem</item>
    </style>

    <!-- 设置页面每个item -->
    <style name="setting_item">
        <item name="android:contentDescription">设置页面每个item的Style</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/set_item_height</item>
        <item name="android:background">@drawable/home_entry_item</item>
        <item name="android:onClick">hitSettingitem</item>
    </style>

    <!-- 开机启动 TextView-->
    <style name="setting_item_head">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/set_item_height</item>
    </style>

    <!-- 开机启动 ToggleButton-->
    <style name="setting_item_head_icon_toggle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/set_item_height</item>
    </style>

    <!-- 软件各页面中列表项右侧图标 -->
    <style name="app_listitem_righticon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/ic_arrows_right</item>
        <item name="android:layout_marginRight">@dimen/app_listitem_horizontal_margin</item>
    </style>
    <!-- 软件各页面中列表项风格(软件管理? 文件管理?) -->
    <style name="app_listitem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>//@dimen/app_listitem_height
        <item name="android:background">@drawable/home_entry_item</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">hitListitem</item>
    </style>

    <!-- 自定义 -->
    <style name="app_listitem_righticon_loading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="app_listitem_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="line_h_transparent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <!-- 饼形图 -->
    <style name="soft_piechar">
        <item name="android:layout_width">@dimen/softmgr_piechar_width</item>
        <item name="android:layout_height">@dimen/softmgr_piechar_height</item>
    </style>
    <!-- 饼形图 icon -->
    <style name="soft_piechar_icon">
        <item name="android:layout_width">@dimen/softmgr_piechar_icon_width</item>
        <item name="android:layout_height">@dimen/softmgr_piechar_icon_width
        </item>
    </style>


    <style name="app_listitem_text_small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">20sp</item>//@dimen/app_listitem_textsize_small
        <item name="android:layout_marginLeft">@dimen/app_listitem_horizontal_margin</item>
    </style>

    <!-- 透明的水平线条(分隔符) -->
    <style name="line_v_transparent">
        <item name="android:background">#00FFFFFF</item>
        <item name="android:layout_width">1dip</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <!-- 文件分类 -->
    <string name="filetype_all">全部</string>
    <string name="filetype_txt">文档</string>
    <string name="filetype_image">图像</string>
    <string name="filetype_audio">音频</string>
    <string name="filetype_video">视频</string>
    <string name="filetype_zip">压缩包</string>
    <string name="filetype_apk">程序包</string>
    <string name="title_activity_showapp">ShowappActivity</string>
    <string name="title_activity_phonemgr">PhonemgrActivity</string>
    <string name="title_activity_telmgr">TelmgrActivity</string>
    <string name="title_activity_telshow">TelshowActivity</string>
    <string name="title_activity_filemgr">FilemgrActivity</string>
    <string name="title_activity_filemgr_show">FilemgrShowActivity</string>
    <string name="title_activity_kuaidi">KuaidiActivity</string>
    <string name="title_activity_clear">ClearActivity</string>

</resources>
